{
  "name": "react-simple-idle-monitor",
  "version": "0.3.3",
  "description": "Simple monitor of idle time for React",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext .jsx,.js . || exit 0",
    "build": "babel src/index.jsx --out-file index.js",
    "preversion": "npm test && eslint --ext .jsx,.js .",
    "version": "npm run build && git add index.js",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Satyam/react-simple-idle-monitor.git"
  },
  "keywords": [
    "react",
    "idle",
    "timer",
    "monitor",
    "screensaver"
  ],
  "author": "Daniel Barreiro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Satyam/react-simple-idle-monitor/issues"
  },
  "homepage": "https://github.com/Satyam/react-simple-idle-monitor#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "html",
      "text"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "env": {
      "node": true,
      "jest": true,
      "browser": true
    },
    "rules": {
      "max-classes-per-file": 0,
      "arrow-parens": 0,
      "react/forbid-prop-types": [
        2,
        {
          "forbid": [
            "object",
            "array"
          ]
        }
      ]
    }
  },
  "peerDependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^24.9.0",
    "prop-types": "^15.6.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  }
}
